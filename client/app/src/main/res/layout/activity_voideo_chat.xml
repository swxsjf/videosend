<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shenweixing.myapplication.VoideoChatActivity">
    <ImageView
        android:id="@+id/other"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/chat_title_black"
        android:scaleType="fitXY"
        />

    <SurfaceView
        android:id="@+id/own"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:visibility="visible"
        >

        <ImageView
            android:id="@+id/NoRecode"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/chat_yuying_voice"
            android:layout_marginLeft="20dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_centerVertical="true"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/chat_yuying_close"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/NoVoice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="3dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/chat_change_camrea"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/agreen_yes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/chat_video_background"
        android:visibility="visible"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/header"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/chat_icon_mine"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/statu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textColor="@color/GrayLine"
                />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/isagreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="39dp"
            android:padding="20dp"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            >
            <LinearLayout
                android:id="@+id/agreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="40dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/chat_yuying_agreen"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/not_agreen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                >
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/chat_yuying_not_agreen"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="拒绝"
                    android:textColor="@color/white"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/close1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/chat_yuying_close"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            />

    </RelativeLayout>
</RelativeLayout>
